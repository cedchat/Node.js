.articles
	- each article in articles
		.row-fluid
			.span12
				.panel.panel-default
					.created_at= article.created_at
					.panel-heading !{article.title}
						if user
							.btn-group.pull-right
								button.btn.btn-default.btn-xs(type='button', onClick="window.location.href='blog/edit/"+article._id+"';") Modifier
								button.btn.btn-default.btn-xs(type='button', onClick="window.location.href='blog/delete/"+article._id+"';") Supprimer
					.panel-body
						.contenu !{article.body}